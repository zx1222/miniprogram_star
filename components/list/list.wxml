            <view class='poster-wrp '>
                  <image class='poster-border w100' src='https://star.t.miinno.net/star_img/video-border.png' mode='widthFix'></image>
                  <image class='poster w100' src='{{item.poster}}' mode='widthFix'></image>
            </view>
      </view>
</view>


