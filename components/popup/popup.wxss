.popup {
      color: #fff;
      width: 600rpx;
      height: 390rpx;
      text-align: center;
      line-height: 1.6;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      /* background:  */
}

.popup .title {
      font-size: 54rpx;
      letter-spacing: 1px;
}

.popup .content {
      font-size: 36rpx;
      letter-spacing: 1px;
}

.popup .btn-wrp {
      width: 90%;
      display: flex;
      justify-content: space-around;
      margin-top: 30rpx;
}

.popup .btn-wrp .btn {
      border-radius: 4rpx;
      font-size: 24rpx;
      letter-spacing: 4px;
}

.popup .btn-wrp .btn-delete {
      width: 160rpx;
      height: 44rpx;
      color: #fff;
      box-shadow: 0 0 0 1px #fff inset;
      line-height: 42rpx;
}

.popup .btn-wrp .btn-cancel {
      width: 160rpx;
      height: 44rpx;
      background: #fff;
      line-height: 42rpx;
}
