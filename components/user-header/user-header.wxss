.header {
      border-bottom: 1px solid #dcdcdc;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding-top: 90rpx;
}

.avatar {
      width: 175rpx;
      height: 175rpx;
      border-radius: 50%;
      overflow: hidden;
}

.nickname {
      font-size: 40rpx;
      color: #fff;
      letter-spacing: 4px;
      padding-bottom: 40rpx;
}

.btn-sign-wrp {
      padding-bottom: 40rpx;
}

.btn-sign-wrp .btn {
      width: 200rpx;
      height: 50rpx;
      border-radius: 15%/50%;
      background: #f9db20;
      line-height: 50rpx;
      font-size: 24rpx;
}
