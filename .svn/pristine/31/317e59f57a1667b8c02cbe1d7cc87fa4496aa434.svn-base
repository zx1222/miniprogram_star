.slider-line {
      position: absolute;
      bottom: 0;
      width: 50%;
      height: 6rpx;
      transition: transform 0.6s;
      -webkit-transition: transform 0.6s;
}
.slider-line .line-inner {
      width: 20%;
      background: #f66a94;
      height: 6rpx;
      margin-left: 40%;
      /* margin-left: calc(40% + 80rpx); */

}


.list-wrp{
 padding: 34rpx;
}

/* 回帖 */
.list-wrp-reply .item{
  margin-bottom: 12rpx;

  border-radius: 8rpx;
  border: 1px solid #d8d8d8;
}
.list-wrp-reply  .hd {
      overflow: hidden;
      display: flex;
      align-items: center;
      width: 100%;
        padding: 14rpx 20rpx 0 20rpx;
}
.list-wrp-reply  .hd .avatar{
  width: 80rpx;
  height: 80rpx;
}

.list-wrp-reply .hd .hd-r {
      padding-left: 26rpx;
      display: flex;
      flex-direction: column;
      /* margin-top: 20rpx; */
}

.list-wrp-reply .hd .name, .list-wrp-reply .hd .time {
      color: #959595;
}

.list-wrp-reply .reply-content{
  color:#585858;
  padding: 24rpx 30rpx 10rpx 30rpx;
}
.list-wrp-reply  .reply-content .time{
  padding-top: 20rpx;
}

.list-wrp-reply .forum-content{
  background: #f5f5f5;
  padding: 20rpx 12rpx;
  border-top: 1px solid #cdcdcd;
    border-bottom: 1px solid #cdcdcd;
}
.list-wrp-reply .count-wrp{
  padding: 20rpx 22rpx;
}
.item-count{
  padding-right: 20rpx;
}
.item-count .icon{
  padding-right: 9rpx;
  font-size: 26rpx;
}