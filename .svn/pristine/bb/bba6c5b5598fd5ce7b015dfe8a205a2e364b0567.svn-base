.container {
  width: 100%;
  height: 100%;
  background: url('https://star.t.miinno.net/star_img/bg-genderTheme.jpg');
  background-size: 100% 100%;
}

.tab {
      width: 100%;
      height: 60rpx;
      line-height: 60rpx;
      background: #fff;
      position: relative;
      display: flex;
      align-items: center;
      justify-content: space-between;
      font-family: 'FZLTHJT';
      border-bottom: 1px solid #959595;
}

.tab .indicator-item {
      flex: 1;
      color: #919191;
      text-align: center;
   
      font-size: 24rpx;
      font-weight: bold;
      letter-spacing: 1px;
      transition: 0.6s;
      -webkit-transition: 0.6s;
}
