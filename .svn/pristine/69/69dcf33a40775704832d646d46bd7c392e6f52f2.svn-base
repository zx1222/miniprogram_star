@import '../../styles/fontawsome.wxss';
@import '../../styles/icon.wxss';
.text-xs{
      font-size: 22rpx;
}
.swiper .list-wrp {
      font-family: 'FZZCHJT';
}


.w100 {
      width: 100%;
}

.bold {
      font-weight: bold;
}

.text-pink {
      color: #e95471;
}

.flex {
      display: flex;
}

.align-items-center {
      align-items: center;
}

.justify-content-between {
      justify-content: space-between;
}

.text-overflow2 {
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
}

.text-overflow1 {
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
}

/*  加载更多  start */

.weui-loading {
      margin: 0 5px;
      width: 20px;
      height: 20px;
      color: #fff;
      display: inline-block;
      vertical-align: middle;
      -webkit-animation: weuiLoading 1s steps(12, end) infinite;
      animation: weuiLoading 1s steps(12, end) infinite;
      background: transparent url(data:image/svg+xml;base64,) no-repeat;
      background-size: 100%;
}

.weui-loadmore {
      width: 65%;
      margin: 1.5em auto;
      line-height: 1.6em;
      font-size: 14px;
      text-align: center;
}

.weui-loadmore__tips {
      display: inline-block;
      vertical-align: middle;
}

.loadmore-end {
      width: 100%;
      margin: 1.2em auto;
      line-height: 1.6em;
      font-size: 14px;
      text-align: center;
}

/*  加载更多  end */
/* swiper */

.swiper image {
      width: 100%;
}

.swiper {
      position: relative;
}

.swiper .dots {
      position: absolute;
      left: 0;
      right: 0;
      bottom: 20rpx;
      display: flex;
      justify-content: center;
}

.swiper .dots .dot {
      margin: 0 8rpx;
      width: 14rpx;
      height: 14rpx;
      background: rgba(255, 255, 255, 0.5);
      border-radius: 50%;
      /* transition: all 0.6s; */
}

.swiper .dots .dot.active {
      width: 16rpx;
      height: 16rpx;
      background: #fff;
      padding: 2px;
      background-clip: content-box;
      box-shadow: 0 0 0 0.5px #fff;
      /* box-shadow: 0 0 0 2px rgba(15,15,15,.6), 0 0 0 3px #ffffff; */
}

/* list */

.list-wrp {
      padding: 20rpx 30rpx 20rpx 30rpx;
      /* padding: 20rpx 30rpx 100rpx 30rpx; */
      overflow: hidden;
}

/* poster */

.poster-wrp {
      position: relative;
}

.poster-wrp  .poster {
      position: absolute;
      width: 94%;
      margin: 8rpx 12rpx;
      top: 0;
      left: 0;
      -webkit-clip-path: polygon(5.5% 0%, 100% 0%, 100% 90%, 94.5% 100%, 0% 100%, 0% 10%);
}

/* poster end*/

/* 视频列表 */

.list-wrp-video .item {
      width: 48.5%;
      box-sizing: border-box;
      position: relative;
      margin-bottom: 8rpx;
}

.list-wrp-video.list-wrp .item:nth-child(2n+1) {
      float: left;
}

.list-wrp-video.list-wrp .item:nth-child(2n) {
      float: right;
}

.list-wrp-video .video-info {
      padding: 10rpx 14rpx;
      font-size: 24rpx;
}

.list-wrp-video .video-info .video-title {
      font-size: 24rpx;
      letter-spacing: 1px;
}

.list-wrp-video .video-info .tag {
      font-size: 18rpx;
      border: 1px solid #e95471;
      padding: 0rpx 7rpx 2rpx 7rpx;
      margin-right: 10rpx;
}
.list-wrp-video .date{
      font-size: 20rpx;
      font-weight: bold;
}

.row {
      padding-top: 6rpx;
}
.icon-ellipsis{
      color: #919191;
}

/* 文章列表 */
.list-wrp-news .item{
      padding: 20rpx 0;
         border-bottom: 1px solid #9e9e9e;
}
.list-wrp-news .item:first-child{
      padding-top: 0;
}
.list-wrp-news .item:last-child{
   border: none;
}
.list-wrp-news .news-info {
      width: 57%;
      margin-right: 5%;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
}

.list-wrp-news .news-info .news-title {
      font-size: 30rpx;
      letter-spacing: 2px;
}

.list-wrp-news .news-info .comment-count, .list-wrp-news .news-info .date {
      font-size: 24rpx;
      letter-spacing: 1px;
}

.list-wrp-news .news-info .icon-message {
      font-size: 25rpx;
      margin-right: 8rpx;
}

.list-wrp-news .poster-wrp {
      width: 38%;
}

/* list  end*/
