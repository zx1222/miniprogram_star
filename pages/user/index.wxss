.container {
      width: 100%;
      height: 100%;
      font-family: 'FZLTHJT';
      background: url('https://star.t.miinno.net/star_img/bg-genderTheme.jpg');
      background-size: 100% 100%;
      padding: 0 40rpx;
}

.user .header {
      padding: 124rpx 0 84rpx 60rpx;
}

.user .name-wrp {
      padding-left: 30rpx;
}

.user .avatar {
      width: 120rpx;
      height: 120rpx;
      border-radius: 50%;
      overflow: hidden;
      margin: 20rpx;
}

.user .btn-modify {
      width: 162rpx;
      height: 42rpx;
      color: #fff;
      border-radius: 4rpx;
      line-height: 42rpx;
      margin-top: 18rpx;
}

.user .entrance-list .item:last-child {
      border-bottom: 1px solid #dfdfdf;
}

.user .item {
      padding: 24rpx 0;
      border-top: 1px solid #dfdfdf;
}

.user .item .item-name {
      padding-left: 20rpx;
      color: #979797;
}

.user .item .icon {
      font-size: 32rpx;
}

.user .item .icon.icon-light {
      font-size: 38rpx;
}

.user .item .r {
      font-size: 34rpx;
}

/* 选择性别皮肤 */
.genderTheme{
      font-family: 'FZLTHJT';
      background: #ffffff;
         /* background: url('http://192.168.0.189/20180507/star_project/web/star_img/bg-genderTheme.jpg'); */
      /* background-size: 100% 100%; */
}

.genderTheme .select-box-female {
      width: 630rpx;
      height: 875rpx;
      background: url('https://star.t.miinno.net/star_img/gender-female-border.png');
      background-size: 100% 100%;
}

.genderTheme .select-box-male {
      width: 630rpx;
      height: 875rpx;
      background: url('https://star.t.miinno.net/star_img/gender-male-border.png');
      background-size: 100% 100%;
}

.genderTheme .select-box {
      padding: 120rpx 20rpx;
}

.genderTheme .select-box .header {
      padding-left: 18rpx;
}

.genderTheme .select-box .header text {
      display: inline-block;
}

.genderTheme .select-box .header text.hd2 {
      margin-left: 18rpx;
}

.genderTheme .select-box .header .line {
      width: 76%;
      margin-left: 12%;
      height: 1px;
      background: #000;
      margin-top: 15rpx;
      margin-bottom: 12rpx;
}

.genderTheme .icon.male {
      width: 172rpx;
      height: 170rpx;
}

.genderTheme .icon.female {
      width: 130rpx;
      height: 222rpx;
}

.genderTheme .icon-wrp {
      margin-top: 92rpx;
      padding: 0 60rpx;
      display: flex;
      align-items: center;
      justify-content: space-around;
}

.genderTheme .btn-confirm{
      width: 180rpx;
      height: 50rpx;
      text-align: center;
      line-height: 50rpx;
      margin-top: 122rpx;
      border-radius: 4rpx;
}
