.container {
  width: 100%;
  /* height: auto; */
  height: 100%;
/* overflow-y: scroll; */

  /* background: pink */
}
.container.is_6{
    height: 100%;
}
.tab {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background: #fff;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-family: 'FZLTHJT';
}

.tab .indicator-item {
  flex: 1;
  color: #919191;
  text-align: center;
  font-size: 24rpx;
  font-weight: bold;
  letter-spacing: 1px;
  transition: 0.6s;
  -webkit-transition: 0.6s;
}

.swiper-item {
  width: 100%;
  background: #fff;
  overflow: auto;
}

.slider-line {
  position: absolute;
  bottom: 0;
  width: 50%;
  height: 6rpx;
  transition: transform 0.6s;
  -webkit-transition: transform 0.6s;
}

.slider-line .line-inner {
  width: 36%;
  background: #f66a94;
  height: 6rpx;
  margin-left: 32%;
}

.idolBoard {
  position: absolute;
  top: 368rpx;
  /* bottom:80rpx; */
  width: calc(100% - 80rpx);
  margin-left: 40rpx;
  border: 1px solid #000;
  border-bottom: none;
  padding: 26rpx 45rpx 4rpx 45rpx;
  /* margin-bottom: 70rpx; */
  background: #fff;
}

.idolBoard .item {
  padding: 10rpx 0;
}

.idolBoard  .item .index {
  font-size: 36rpx;
  color: #ababab;
  padding-right: 22rpx;
}

.idolBoard  .item .avatar-wrp {
  width: 33%;
  margin-right: 2%;
}

.idolBoard  .item .idol-avatar {
  width: 106rpx;
  border-radius: 50%;
  margin: 16rpx;
}

.idolBoard  .item .count-wrp {
  padding-left: 35rpx;
}

.idolBoard  .item .btn-support {
  width: 116rpx;
  height: 36rpx;
  border-radius: 4rpx;
  text-align: center;
  line-height: 36rpx;
}

/* 歌姬列表 */

.fansBoard {
  height: calc(100% - 140rpx);
}

.fansBoard .idol-list {
  padding: 20rpx 30rpx 20rpx 34rpx;
  height: 100%;
}

.fansBoard  .item {
  position: relative;
}

.fansBoard  .item-content {
  padding: 10rpx 30rpx;
  position: relative;
}

.fansBoard  .item .border {
  position: absolute;
  width: 100%;
  height: 100%;
}

.fansBoard  .item .avatar-wrp {
  width: 33%;
  margin-right: 2%;
}

.fansBoard  .item .idol-avatar {
  width: 142rpx;
  border-radius: 50%;
  margin: 16rpx;
}

.fansBoard  .item .idol-name {
  position: relative;
}

.fansBoard  .item .idol-name .icon-right {
  font-size: 16rpx;
  position: absolute;
  left: -20rpx;
  top: 14rpx;
}

.fansBoard .item .idol-info {
  width: 65%;
  height: 154rpx;
  padding-top: 20rpx;
  padding-left: 16rpx;
  position: relative;
}

.fansBoard .item .idol-info .idol-fans {
  padding-top: 18rpx;
}

.fansBoard .item .idol-info .fans-count {
  font-size: 36rpx;
  font-family: 'FZLTCHJT';
}

.fansBoard .item .idol-info .idol-desc {
  font-size: 26rpx;
  font-family: 'FZZCHJT';
  line-height: 1.3;
}

.fansBoard .item .btn {
  position: absolute;
  top: 18rpx;
  right: 14rpx;
  width: 156rpx;
  height: 38rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  line-height: 38rpx;
  border: none;
}
