/* pages/user/component/topic-swiper/topic-swiper.wxss */

page, .user-container, .footer,.content-swiper{
  height: 100%
}

 .content-swiper {
      height: calc(100% - 120rpx);
}
.swiper-indicator {
      width: 100%;
      height: 60rpx;
      line-height: 60rpx;
      background: #fff;
      position: relative;
      display: flex;
      align-items: center;
      justify-content: space-between;
     
        font-family: 'FZLTHJT'
}

.swiper-indicator .indicator-item {
      flex: 1;
      color: #919191;
      text-align: center;
      font-size: 24rpx;
      font-weight: bold;
      letter-spacing: 1px;
      transition: 0.6s;
      -webkit-transition: 0.6s;
}

.swiper-item {
      width: 100%;
      background: #fff;
      overflow: auto;
}

.slider-line {
      position: absolute;
      bottom: 0;
      width: 33.3%;
      height: 6rpx;

      transition: transform 0.5s;
      -webkit-transition: transform 0.5s;
}
.slider-line .line-inner{
      width: 34%;
         background: #f66a94;
         height: 6rpx;
         margin-left:33%;
}
