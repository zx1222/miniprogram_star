.container {
      width: 100%;
      height: 100%;
      font-family: 'FZLTHJT';
         background: url('https://star.t.miinno.net/star_img/bg-genderTheme.jpg');
      background-size: 100% 100%;
}

.select-box-female {
      width: 630rpx;
      height: 875rpx;
      background: url('https://star.t.miinno.net/star_img/gender-female-border.png');
      background-size: 100% 100%;
}

.select-box-male {
      width: 630rpx;
      height: 875rpx;
      background: url('https://star.t.miinno.net/star_img/gender-male-border.png');
      background-size: 100% 100%;
}

.select-box {
      padding: 120rpx 20rpx;
}

.select-box .header {
      padding-left: 18rpx;
}

.select-box .header text {
      display: inline-block;
}

.select-box .header text.hd2 {
