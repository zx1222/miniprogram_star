.select-box .header .line {
      width: 76%;
      margin-left: 12%;
      height: 1px;
      background: #000;
      margin-top: 15rpx;
      margin-bottom: 12rpx;
}

.icon.male {
      width: 172rpx;
      height: 170rpx;
}

.icon.female {
      width: 130rpx;
      height: 222rpx;
}

.icon-wrp {
      margin-top: 92rpx;
      padding: 0 60rpx;
      display: flex;
      align-items: center;
      justify-content: space-around;
}

.btn-confirm{
      width: 180rpx;
      height: 50rpx;
      text-align: center;
      line-height: 50rpx;
      margin-top: 122rpx;
