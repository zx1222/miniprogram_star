/* 发布类型弹窗 */

@keyframes bounce1 {
      from {
            transform: translate3d(70%, 200%, 0);
            opacity: 0;
      }

      to {
            transform: translate3d(0%, 0%, 0);
            opacity: 1;
      }
}

@keyframes bounce2 {
      from {
            transform: translate3d(-70%, 200%, 0);
            opacity: 0;
      }

      to {
            transform: translate3d(0%, 0%, 0);
            opacity: 1;
      }
}

.popup.post-type .btn-wrp {
      width: 128rpx;
      margin: 0 94rpx;
      text-align: center;
      opacity: 0;
}

.popup.post-type .btn-wrp:first-child {
